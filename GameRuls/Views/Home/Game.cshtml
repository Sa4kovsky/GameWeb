@{
    ViewData["Title"] = "Game";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="container">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    <div class="col-md-6">
                        <div class="form-group">
                            <h4>Room </h4>
                            <input type="text" class="form-control" name="room" id="room" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputSizePlaningFaild">Введите размер поля</label>
                            <input type="number" min="3" value="3" class="form-control" id="sizePlaingFaild" name="sizePlaingFaild">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputSizeWin"> Сколько должно быть одинаковых значение подряд для победы</label>
                            <input type="number" min="3" value="3" class="form-control" id="sizeWin" name="sizeWin">
                        </div>

                        <button type="submit" class="btn btn-dark" id="joinButton">Create game</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

